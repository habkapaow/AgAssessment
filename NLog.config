<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<targets>
		<!-- Log to file -->
		<target xsi:type="File" name="fileTarget" fileName="logs/app.log" layout="${longdate} | ${level} | ${message}" />

		<!-- Log to console -->
		<target xsi:type="Console" name="consoleTarget" layout="${longdate} | ${level} | ${message}" />
	</targets>

	<rules>
		<!-- Log everything to the file and console -->
		<logger name="*" minlevel="Info" writeTo="fileTarget,consoleTarget" />
	</rules>
</nlog>
